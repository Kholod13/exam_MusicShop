<Window x:Class="exam_ef.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam_ef"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <StackPanel  Height="30" VerticalAlignment="top" Orientation="Horizontal">
            <TextBlock FontSize="14" Margin="5,5,5,5">Shop</TextBlock>
            <Button Click="Button_Click_2" Padding="10,0" Margin="5,5">Load</Button>
            <Button Click="Button_Click_3" Padding="10,0" Margin="5,5">Update</Button>
            <Button FontWeight="Bold" Padding="10,0" Margin="30,5, 5, 5">Home</Button>
            <Button Padding="10,0" Margin="5,5">Balcklist</Button>
            <Button Padding="10,0" Margin="5,5">Discount 15%</Button>
        </StackPanel>
        <DataGrid Margin="0,30,0,0" x:Name="tableView"></DataGrid>
    </Grid>
</Window>
